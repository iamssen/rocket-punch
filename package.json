{
  "name": "rocket-punch",
  "private": true,
  "author": "SSen <i@ssen.name>",
  "license": "MIT",
  "repository": "github:rocket-hangar/rocket-punch",
  "workspaces": [
    "packages"
  ],
  "scripts": {
    "build": "cd packages; npm run build",
    "publish": "npm run test && npm run build && cd packages; npm run publish",
    "view": "cd packages; npm run view",
    "doctor": "cd packages; npm run doctor",
    "format": "prettier --write \"**/*.{js,ts,tsx}\"",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "e2e": "cd packages; npm run e2e",
    "test": "cd packages; npm run test",
    "coverage": "cd packages; npm run coverage"
  },
  "lint-staged": {
    "packages/{src,scripts,@types}/{**/*,*}.{ts,tsx}": [
      "prettier --write",
      "eslint"
    ]
  },
  "devDependencies": {
    "@handbook/markdown-source-import": "^1.0.1",
    "@ssen/eslint-config": "^1.3.1",
    "@ssen/prettier-config": "^1.2.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2"
  }
}
