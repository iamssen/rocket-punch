{
  "private": true,
  "author": "SSen <i@ssen.name>",
  "license": "MIT",
  "repository": "github:rocket-hangar/rocket-punch",
  "scripts": {
    "build": "node -r ts-node/register -r tsconfig-paths/register scripts/build.ts",
    "publish": "npm run test && npm run build && node -r ts-node/register -r tsconfig-paths/register scripts/publish.ts",
    "view": "node -r ts-node/register -r tsconfig-paths/register scripts/view.ts",
    "doctor": "node -r ts-node/register -r tsconfig-paths/register scripts/doctor.ts",
    "format": "prettier --write scripts \"source/src/{**/*,*}.{ts,tsx}\"",
    "lint": "eslint scripts \"source/src/{**/*,*}.{ts,tsx}\"",
    "e2e": "npm run build && bash test/e2e.sh",
    "test": "jest --colors",
    "coverage": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "cp README.md source/src/rocket-punch/README.md && markdown-source-import \"{,!(node_modules)/**/}*.md\" --git-add && lint-staged"
    }
  },
  "lint-staged": {
    "source/src/{**/*,*}.{ts,tsx}": [
      "prettier --write",
      "eslint",
      "jest --colors --findRelatedTests"
    ]
  },
  "workspaces": [
    "source",
    "out/packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "@ssen/eslint-config": "^1.1.0",
    "@ssen/prettier-config": "^1.0.0",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "@types/prettier": "^2.0.2",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.2.11",
    "markdown-source-import": "^1.3.1",
    "prettier": "^2.0.5",
    "ts-jest": "^26.2.0",
    "tsconfig-paths": "^3.9.0"
  }
}
