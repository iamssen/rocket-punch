{
  "private": true,
  "author": "SSen <i@ssen.name>",
  "license": "MIT",
  "repository": "github:rocket-hangar/rocket-punch",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && ts-node -r tsconfig-paths/register src/build-packages.ts",
    "publish": "npm run test && npm run build && ts-node -r tsconfig-paths/register src/publish-packages.ts",
    "publish:local": "ts-node -r tsconfig-paths/register src/publish-packages-e2e.ts --tag canary --registry $LOCAL_NPM_REGISTRY",
    "view": "ts-node -r tsconfig-paths/register src/view-packages.ts",
    "doctor": "ts-node -r tsconfig-paths/register src/doctor-packages.ts",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "e2e": "npm run build && bash test/e2e.sh",
    "test": "jest --colors",
    "coverage": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "markdown-source-import \"{,!(node_modules)/**/}*.md\" --git-add && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint",
      "jest --colors --findRelatedTests"
    ]
  },
  "devDependencies": {
    "@ssen/eslint-config": "^1.1.0",
    "@ssen/prettier-config": "^1.0.0",
    "@svgr/plugin-jsx": "^5.4.0",
    "@types/eslint": "^7.2.0",
    "@types/fs-extra": "^9.0.1",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.5",
    "@types/js-yaml": "^3.12.5",
    "@types/node": "^14.0.23",
    "@types/node-fetch": "^2.5.7",
    "@types/prettier": "^2.0.2",
    "@types/prompts": "^2.4.0",
    "@types/ramda": "^0.27.11",
    "@types/react": "^16.9.43",
    "@types/rimraf": "^3.0.0",
    "@types/semver": "^7.3.1",
    "@types/tmp": "^0.2.0",
    "@types/validate-npm-package-name": "^3.0.0",
    "@types/yargs": "^15.0.5",
    "chalk": "^4.1.0",
    "depcheck": "^1.0.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "js-yaml": "^3.14.0",
    "lint-staged": "^10.2.11",
    "markdown-source-import": "^1.3.1",
    "mini-svg-data-uri": "^1.2.3",
    "node-fetch": "^2.6.0",
    "package-json": "^6.5.0",
    "prettier": "^2.0.5",
    "prompts": "^2.3.2",
    "ramda": "^0.27.0",
    "react": "^16.13.1",
    "rimraf": "^3.0.2",
    "semver": "^7.3.2",
    "tmp": "^0.2.1",
    "ts-jest": "^26.1.3",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "type-fest": "^0.16.0",
    "typescript": "^3.9.7",
    "validate-npm-package-name": "^3.0.0",
    "yargs": "^15.4.1"
  }
}
