{
  "name": "trism",
  "version": "0.4.0",
  "description": "TypeScript Multiple Package Builder (like Monorepo)",
  "author": "SSen <i@ssen.name>",
  "license": "MIT",
  "repository": "github:iamssen/trism",
  "bugs": "https://github.com/iamssen/trism/issues",
  "homepage": "https://github.com/iamssen/trism",
  "keywords": [
    "package",
    "build",
    "typescript"
  ],
  "engines": {
    "node": ">=10"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "bin",
    "lib",
    "package.json",
    "LICENSE",
    "README.md"
  ],
  "bin": {
    "trism": "./bin/trism.js"
  },
  "scripts": {
    "clean": "rimraf lib",
    "build": "npm run clean && tsc --project tsconfig.build.json",
    "watch": "npm run clean && tsc --project tsconfig.build.json --watch",
    "prepublishOnly": "npm run test && npm run build",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "jest --colors",
    "coverage": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint",
      "jest --colors --findRelatedTests"
    ]
  },
  "dependencies": {
    "fs-extra": "^9.0.0",
    "git-branch": "^2.0.1",
    "glob": "^7.1.6",
    "js-yaml": "^3.13.1",
    "package-json": "^6.5.0",
    "prompts": "^2.3.2",
    "semver": "^7.1.3",
    "validate-npm-package-name": "^3.0.0",
    "yargs": "^15.3.1"
  },
  "peerDependencies": {
    "typescript": ">=3.8.0"
  },
  "devDependencies": {
    "@lunit/eslint-config": "^0.5.0",
    "@lunit/prettier-config": "^0.1.1",
    "@types/eslint": "^6.1.8",
    "@types/fs-extra": "^8.1.0",
    "@types/git-branch": "^2.0.1",
    "@types/glob": "^7.1.1",
    "@types/jest": "^25.1.4",
    "@types/js-yaml": "^3.12.3",
    "@types/node": "^13.9.3",
    "@types/prettier": "^1.19.1",
    "@types/prompts": "^2.4.0",
    "@types/rimraf": "^3.0.0",
    "@types/semver": "^7.1.0",
    "@types/validate-npm-package-name": "^3.0.0",
    "coveralls": "^3.0.11",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "husky": "^4.2.3",
    "jest": "^25.2.0",
    "lint-staged": "^10.0.9",
    "prettier": "^2.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.2.1",
    "type-fest": "^0.12.0",
    "typescript": "^3.8.3"
  }
}
