{
  "compilerOptions": {
    // lang
    "downlevelIteration": true,
    "resolveJsonModule": true,
    // import
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    // strict
    "strict": true,
    // build
    "module": "commonjs",
    "target": "ES2018",
    "moduleResolution": "node",
    "skipLibCheck": true,
    // export
    "sourceMap": true,
    "declaration": true,
    // types
    "typeRoots": [
      "../node_modules/@types",
      "../@types"
    ],
    // path
    "baseUrl": "src",
    // output
    "outDir": "foo"
  },
  "include": [
    "src"
  ]
}
